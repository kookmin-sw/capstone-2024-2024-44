<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/messagesRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">
    <ImageView
        android:id="@+id/profilePhotoImgView"
        android:layout_width="60dp"
        android:layout_height="60dp" />
    <TextView
        android:id="@+id/nameTextView"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/profilePhotoImgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/msgContentTextView"
        android:layout_toRightOf="@+id/profilePhotoImgView"
        android:layout_alignBottom="@+id/profilePhotoImgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/msgDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"/>
</RelativeLayout>